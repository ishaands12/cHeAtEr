{
  "meta": {
    "name": "Cluely Design System",
    "version": "1.0.1",
    "description": "A dark-themed, immersive design system featuring deep purples, soft glows, and glassmorphism.",
    "last_updated": "2025-11-21"
  },
  "tokens": {
    "colors": {
      "primitives": {
        "gray": {
          "50": "#F9FAFB",
          "100": "#F3F4F6",
          "200": "#E5E7EB",
          "300": "#D1D5DB",
          "400": "#9CA3AF",
          "500": "#6B7280",
          "600": "#4B5563",
          "700": "#374151",
          "800": "#1F2937",
          "850": "#161b22",
          "900": "#111827",
          "950": "#0B0F19"
        },
        "purple": {
          "400": "#A78BFA",
          "500": "#8B5CF6",
          "600": "#7C3AED",
          "glow": "rgba(124, 58, 237, 0.5)"
        },
        "blue": {
          "400": "#60A5FA",
          "500": "#3B82F6",
          "glow": "rgba(59, 130, 246, 0.5)"
        }
      },
      "semantic": {
        "background": {
          "main": "#050508",
          "secondary": "#0A0A12",
          "surface": "#12121A",
          "surface_highlight": "#1C1C26",
          "overlay": "rgba(0, 0, 0, 0.7)"
        },
        "text": {
          "primary": "#FFFFFF",
          "secondary": "#9CA3AF",
          "tertiary": "#6B7280",
          "accent": "#A78BFA"
        },
        "border": {
          "subtle": "rgba(255, 255, 255, 0.08)",
          "moderate": "rgba(255, 255, 255, 0.15)",
          "focus": "#7C3AED"
        },
        "status": {
          "success": "#10B981",
          "warning": "#F59E0B",
          "error": "#EF4444",
          "info": "#3B82F6"
        }
      },
      "gradients": {
        "primary_card": "linear-gradient(105deg, #2E2E45 0%, #1A1A2E 100%)",
        "brand_accent": "linear-gradient(135deg, #7C3AED 0%, #3B82F6 100%)",
        "glass_surface": "linear-gradient(180deg, rgba(30, 30, 40, 0.7) 0%, rgba(20, 20, 30, 0.4) 100%)",
        "subtle_glow": "radial-gradient(circle at center, rgba(124, 58, 237, 0.15) 0%, transparent 70%)"
      }
    },
    "typography": {
      "font_family": {
        "sans": ["Inter", "system-ui", "sans-serif"],
        "display": ["Plus Jakarta Sans", "Inter", "sans-serif"]
      },
      "weights": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "sizes": {
        "xs": { "size": "0.75rem", "line_height": "1rem" },
        "sm": { "size": "0.875rem", "line_height": "1.25rem" },
        "base": { "size": "1rem", "line_height": "1.5rem" },
        "lg": { "size": "1.125rem", "line_height": "1.75rem" },
        "xl": { "size": "1.25rem", "line_height": "1.75rem" },
        "2xl": { "size": "1.5rem", "line_height": "2rem" },
        "3xl": { "size": "1.875rem", "line_height": "2.25rem" },
        "4xl": { "size": "2.25rem", "line_height": "2.5rem" }
      }
    },
    "spacing": {
      "0": "0px",
      "px": "1px",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "32": "8rem"
    },
    "radius": {
      "none": "0px",
      "sm": "0.375rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "2xl": "1.5rem",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.3)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.4)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.4)",
      "glow_primary": "0 0 20px rgba(124, 58, 237, 0.3)",
      "glow_accent": "0 0 15px rgba(59, 130, 246, 0.4)",
      "inner_highlight": "inset 0 1px 0 0 rgba(255, 255, 255, 0.1)"
    },
    "blur": {
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "xl": "16px"
    },
    "animation": {
      "transition": {
        "fast": "150ms cubic-bezier(0.4, 0, 0.2, 1)",
        "default": "200ms cubic-bezier(0.4, 0, 0.2, 1)",
        "slow": "300ms cubic-bezier(0.4, 0, 0.2, 1)"
      }
    }
  },
  "components": {
    "button": {
      "primary": {
        "background": "tokens.colors.gradients.brand_accent",
        "text": "tokens.colors.semantic.text.primary",
        "radius": "tokens.radius.full",
        "padding": "0.75rem 1.5rem",
        "font_weight": "tokens.typography.weights.semibold",
        "shadow": "tokens.shadows.glow_accent",
        "hover": {
          "brightness": "1.1",
          "transform": "translateY(-1px)"
        }
      },
      "secondary": {
        "background": "rgba(255, 255, 255, 0.05)",
        "text": "tokens.colors.semantic.text.primary",
        "border": "1px solid tokens.colors.semantic.border.subtle",
        "radius": "tokens.radius.full",
        "hover": {
          "background": "rgba(255, 255, 255, 0.1)"
        }
      },
      "ghost": {
        "background": "transparent",
        "text": "tokens.colors.semantic.text.secondary",
        "hover": {
          "text": "tokens.colors.semantic.text.primary",
          "background": "rgba(255, 255, 255, 0.03)"
        }
      }
    },
    "card": {
      "base": {
        "background": "tokens.colors.semantic.background.surface",
        "border": "1px solid tokens.colors.semantic.border.subtle",
        "radius": "tokens.radius.2xl",
        "padding": "tokens.spacing.6"
      },
      "highlight": {
        "background": "tokens.colors.gradients.primary_card",
        "shadow": "tokens.shadows.glow_primary",
        "border": "1px solid rgba(124, 58, 237, 0.3)"
      }
    },
    "input": {
      "background": "rgba(0, 0, 0, 0.2)",
      "text": "tokens.colors.semantic.text.primary",
      "placeholder": "tokens.colors.semantic.text.tertiary",
      "border": "1px solid tokens.colors.semantic.border.subtle",
      "radius": "tokens.radius.lg",
      "padding": "0.75rem 1rem",
      "focus": {
        "border": "tokens.colors.semantic.border.focus",
        "shadow": "0 0 0 2px rgba(124, 58, 237, 0.2)"
      }
    },
    "toggle": {
      "track_inactive": "rgba(255, 255, 255, 0.1)",
      "track_active": "tokens.colors.semantic.text.primary",
      "thumb": "#FFFFFF",
      "size": {
        "width": "2.5rem",
        "height": "1.5rem"
      }
    },
    "badge": {
      "background": "rgba(124, 58, 237, 0.1)",
      "text": "tokens.colors.primitives.purple.400",
      "radius": "tokens.radius.md",
      "padding": "0.25rem 0.5rem",
      "text_size": "tokens.typography.sizes.xs"
    }
  }
}
